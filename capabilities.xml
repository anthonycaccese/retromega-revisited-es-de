<themeCapabilities>
   
   <themeName>Retro Mega (Revisited)</themeName>

   <!--
   ///
   Aspect Ratios
   ///
   -->
   <aspectRatio>16:9</aspectRatio>
   <aspectRatio>16:10</aspectRatio>
   <aspectRatio>4:3</aspectRatio>
   <aspectRatio>3:2</aspectRatio>
   <aspectRatio>19.5:9</aspectRatio>
   <aspectRatio>21:9</aspectRatio>

   <!--
   ///
   Font Size
   ///
   -->
   <fontSize>small</fontSize>
   <fontSize>medium</fontSize>
   <fontSize>large</fontSize>

   <!--
   ///
   Color Schemes
   ///
   -->
   <colorScheme name="colorful-light">
      <label>Colorful (Light)</label>
   </colorScheme>
   <colorScheme name="colorful-dark">
      <label>Colorful (Dark)</label>
   </colorScheme>
   <colorScheme name="oled">
      <label>OLED</label>
   </colorScheme>
   <colorScheme name="dmg">
      <label>DMG</label>
   </colorScheme>
   <colorScheme name="famicom">
      <label>Famicom</label>
   </colorScheme>

   <!--
   ///
   Transitions
   ///
   -->
   <transitions name="slide">
      <label>Slide</label>
      <selectable>true</selectable>
      <systemToSystem>slide</systemToSystem>
      <systemToGamelist>slide</systemToGamelist>
      <gamelistToGamelist>slide</gamelistToGamelist>
      <gamelistToSystem>slide</gamelistToSystem>
      <startupToSystem>instant</startupToSystem>
      <startupToGamelist>instant</startupToGamelist>
   </transitions>
   <transitions name="instant-slide">
      <label>Instant + Slide</label>
      <selectable>true</selectable>
      <systemToSystem>instant</systemToSystem>
      <systemToGamelist>slide</systemToGamelist>
      <gamelistToGamelist>instant</gamelistToGamelist>
      <gamelistToSystem>slide</gamelistToSystem>
      <startupToSystem>instant</startupToSystem>
      <startupToGamelist>instant</startupToGamelist>
   </transitions>
   <transitions name="instant">
      <label>Instant</label>
      <selectable>true</selectable>
      <systemToSystem>instant</systemToSystem>
      <systemToGamelist>instant</systemToGamelist>
      <gamelistToGamelist>instant</gamelistToGamelist>
      <gamelistToSystem>instant</gamelistToSystem>
      <startupToSystem>instant</startupToSystem>
      <startupToGamelist>instant</startupToGamelist>
   </transitions>
   <suppressTransitionProfiles>
      <entry>builtin-instant</entry>
      <entry>builtin-slide</entry>
      <entry>builtin-fade</entry>
   </suppressTransitionProfiles>

   <!--
   ///
   Variants
   ///
   -->
   <!-- Gamelist List -->
   <variant name="gamelist-list-cover">
      <label>List: Boxart</label>
      <selectable>true</selectable>
      <override>
         <trigger>noMedia</trigger>
         <mediaType>cover</mediaType>
         <useVariant>gamelist-list-basic</useVariant>
      </override>
   </variant>
   <variant name="gamelist-list-miximage">
      <label>List: Miximage</label>
      <selectable>true</selectable>
      <override>
         <trigger>noMedia</trigger>
         <mediaType>miximage</mediaType>
         <useVariant>gamelist-list-basic</useVariant>
      </override>
   </variant>
   <variant name="gamelist-list-screenshot">
      <label>List: Screenshot</label>
      <selectable>true</selectable>
      <override>
         <trigger>noMedia</trigger>
         <mediaType>screenshot</mediaType>
         <useVariant>gamelist-list-basic</useVariant>
      </override>
   </variant>
   <variant name="gamelist-list-titlescreen">
      <label>List: Title Screen</label>
      <selectable>true</selectable>
      <override>
         <trigger>noMedia</trigger>
         <mediaType>titlescreen</mediaType>
         <useVariant>gamelist-list-basic</useVariant>
      </override>
   </variant>
   <variant name="gamelist-list-physicalmedia">
      <label>List: Physical Media</label>
      <selectable>true</selectable>
      <override>
         <trigger>noMedia</trigger>
         <mediaType>physicalmedia</mediaType>
         <useVariant>gamelist-list-basic</useVariant>
      </override>
   </variant>
   <variant name="gamelist-list-basic">
      <label>List: Basic</label>
      <selectable>true</selectable>
   </variant>
   <!-- Gamelist Carousel -->
   <variant name="gamelist-carousel-cover">
      <label>Carousel: Boxart</label>
      <selectable>true</selectable>
   </variant>

</themeCapabilities>